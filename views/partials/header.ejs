<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Blog App</title>
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
  <link rel="stylesheet" type="text/css" href="/stylesheets/app.css">
</head>
<body>

  <div class="ui inverted segment">

      <div class="ui inverted stackable secondary menu">

        <div class="ui container">
          <a href="/"><div class="header item"><i class="paper plane icon"></i>Blog Site</div></a>
          <a href="/" class="<%= typeof page !== 'undefined' && page === 'blogs' ? 'active' : '' %> item">Home</a>
          <a href="/blogs/new" class="<%= typeof page !== 'undefined' && page === 'new' ? 'active' : '' %> item">New Post</a>

          <div class="right menu">
            <% if (!currentUser) { %>
              <a href="/register" class="<%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %> item">Sign Up</a>
              <a href="/login" class="<%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %> item">Login</a>
            <% } else { %>
              <a href="#" class="ui medium header item"><em>Signed in as <span style="color: white"><%= currentUser.username %></span></em></a>
              <a href="/logout" class="item">Logout</a>
            <% } %>
          </div>
        </div>

      </div>

  </div>

  <div class="ui container">
    <% if (error && error.length > 0) { %>
      <div class="ui negative message">
        <div class="header">
          <%= error %>
        </div>
      </div>
    <% } %>

    <% if (success && success.length > 0) { %>
      <div class="ui positive message">
        <div class="header">
          <%= success %>
        </div>
      </div>
    <% } %>
  </div>
