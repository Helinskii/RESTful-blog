<%- include('../partials/header') %>

<div class="ui main text container">
  <div class="ui huge header">RESTful Blog App</div>
  <div class="ui top attached segment">
    <div class="ui divided items">
      <% if (blogs.length === 0) { %>
        <p style="color: grey; font-size: 2em; text-align: center"><em>No blogs yet.</em><i class="frown outline icon"></i></p>
      <% } %>
      <% blogs.forEach(function(blog) { %>
        <div class="item">

          <div class="image">
            <img src="<%= blog.image %>">
          </div>

          <div class="content">
            <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
            <div class="meta">
              <span><%= blog.created.toDateString() %></span>
            </div>
            <div class="description">
              <p><%- blog.body.substring(0, 100) %>...</p>
            </div>
            <div class="extra">
              <a class="ui grey medium button" href="/blogs/<%= blog._id %>">
                Read More
                <i class="arrow alternate circle right outline icon"></i>
              </a>
            </div>
          </div>

        </div>
      <% }) %>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
